@model ProdutoModel
@{
    var action = Context.Request.RouteValues.ContainsKey("id") ? 
        "Alteração de Produto":
        "Cadastro de Produto";
}


<Header class="d-flex justify-content-between align-items-lg-center">
    <div>
        <h1 class="text-primary">@action</h1>
    </div>
</Header>
<hr>

<form asp-action="Cadastrar" asp-controller="Produto">
    <input type="hidden" asp-for="@Model.ID">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome: </label><br>
        <input asp-for="@Model.Nome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Valor">Valor: </label><br>
        <input asp-for="@Model.Valor" class="form-control">
        <span asp-validation-for="@Model.Valor" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Quantidade">Quantidade: </label><br>
        <input asp-for="@Model.Quantidade" class="form-control">
        <span asp-validation-for="@Model.Quantidade" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IDCategoria">Categoria: </label><br>
        <select asp-for="@Model.IDCategoria" class="form-control" asp-items="@ViewBag.Categorias"></select>
        <span asp-validation-for="@Model.IDCategoria" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>