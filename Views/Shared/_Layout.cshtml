@{
    var action = ViewBag.Subtitulo as string ?? ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="\lib\bootstrap5\dist\css\bootstrap.css">
    <link rel="stylesheet" href="\css\estilos.css">
    <title>CRUD SQLite | @action</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">CRUD</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link @(action == "Index" ? "active" : "")" aria-current="page"
                        asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link @(action == "Categorias" ? "active" : "")" aria-current="page"
                        asp-controller="Categoria" asp-action="Index">Categorias</a>
                    <a class="nav-link @(action == "Produtos" ? "active" : "")" aria-current="page"
                        asp-controller="Produto" asp-action="Index">Produtos</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        &copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
        @RenderSection("Footer", false)
    </div>

    @RenderSection("Scripts", false)

</body>

</html>